  "yarn": "^1.22.19"
 },
 "dependencies": {
  "compression": "^1.7.4",
  "config": "^3.3.8",
  "cookie-parser": "^1.4.6",
  "cors": "^2.8.5",
  "debug": "^4.3.4",
  "express": "^4.18.1",
  "helmet": "^6.0.0",
  "i18n": "^0.15.0",
  "jsonwebtoken": "^8.5.1",
