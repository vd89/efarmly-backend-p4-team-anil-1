  "rotating-file-stream": "^3.0.4"
 },
 "devDependencies": {
  "cross-env": "^7.0.3",
  "dotenv": "^16.0.2",
  "eslint": ">=5.16.0",
  "eslint-config-google": "^0.14.0",
  "eslint-config-prettier": "^8.5.0",
  "eslint-plugin-import": "^2.26.0",
  "eslint-plugin-prettier": "^4.2.1",
  "eslint-plugin-spellcheck": "^0.0.20",
  "husky": "^8.0.0",
  "jest": "^29.3.1",
  "nodemon": "^2.0.20",
  "prettier": "^2.7.1",
  "pretty-quick": "^3.1.3",
  "supertest": "^6.3.3"
 },
 "jest": {
  "testEnvironment": "node",
  "verbose": true,
  "roots": [
   "tests"
  ],
  "coverageThreshold": {
   "global": {
    "branches": 80,
    "functions": 50,
    "lines": 60,
    "statements": 60
   }
  },
  "moduleFileExtensions": [
   "js",
   "json"
  ],
  "coverageDirectory": "./coverage"
 },
 "scripts": {
  "dev": "cross-env DEBUG=app:* node --watch index.js",
  "start": "NODE_ENV=production DEBUG=app:* node .",
  "remove": "rm -rf dist node_modules",
  "db:init": "docker compose -f int-setup/docker-compose.yaml up -d",
  "test": "NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest --testTimeout=5000",
  "test:cov": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
  "lint-fix": "eslint src tests --fix ",
  "prepare": "husky install"
 }
}
